<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/len_12"
            android:paddingEnd="@dimen/len_12"
            tools:context=".ui.EnterPwdFragment">

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/pwdEt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_54"
                android:background="@null"
                android:hint="@string/label_input_pwd"
                android:inputType="textPassword"
                android:maxLength="11"
                android:textColor="@color/color_343434"
                android:textColorHint="@color/color_cbcbcb"
                android:textCursorDrawable="@drawable/cursor_color"
                android:textSize="@dimen/font_16"
                app:layout_constraintEnd_toStartOf="@id/forgetPwdTv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/forgetPwdTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/label_forget_pwd"
                android:textColor="@color/banner_5784ad"
                app:layout_constraintBottom_toBottomOf="@id/pwdEt"
                app:layout_constraintEnd_toEndOf="parent" />

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/len_8"
                android:background="@color/color_cbcbcb"
                app:layout_constraintTop_toBottomOf="@id/pwdEt" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_40"
                android:layout_marginStart="@dimen/len_12"
                android:layout_marginTop="@dimen/len_52"
                android:layout_marginEnd="@dimen/len_12"
                android:background="@drawable/btn_rund_bg_red_20"
                android:gravity="center"
                android:text="@string/label_next"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_15"
                app:layout_constraintTop_toBottomOf="@id/pwdEt" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>